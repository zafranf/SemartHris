{% if view == 'show' %}
    {% if value | length > 0 %}
        {% for element in value %}
            <button type="button" class="btn btn-success">{{ element }}</button>
        {% endfor %}
    {% else %}
        <div class="empty collection-empty">
            {{ include(entity_config.templates.label_empty) }}
        </div>
    {% endif %}
{% else %}
    {{ value|join(', ')|easyadmin_truncate }}
{% endif %}
